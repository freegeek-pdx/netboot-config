
label ltsp-squeeze
  menu label Diskless Terminal
  kernel /ltsp/i386-squeeze/vmlinuz
  initrd /ltsp/i386-squeeze/initrd.img
  append quiet root=/dev/nfs ip=dhcp boot=nfs nfsroot=/opt/ltsp/i386-squeeze/
  ipappend 2

label ltsp-wheezy
  menu label Diskless Terminal (experimental)
  kernel /ltsp/i386-wheezy/vmlinuz
  append ro initrd=/ltsp/i386-wheezy/initrd.img init=/sbin/init-ltsp quiet root=/dev/nfs ip=dhcp boot=nfs nfsroot=/opt/ltsp/i386-wheezy/
  ipappend 2

