
label disk-test
  menu label Disk Testing
  kernel /ltsp/i386/vmlinuz
  initrd /ltsp/i386/initrd.img
  append quiet root=/dev/nfs ip=dhcp boot=nfs nfsroot=192.168.2.44:/opt/ltsp/i386/ disktest=true

