# load code to check if disk has been wiped.
d-i partman/early_command string wget http://apt.freegeek.org/external/ubuntu/pool/main/l/lshw/lshw-udeb_02.16-0.3_$(udpkg --print-architecture).udeb -O /tmp/lshw-udeb.udeb &&  udpkg -i /tmp/lshw-udeb.udeb && wget http://apt.freegeek.org/external/ubuntu/pool/main/f/fgdiag-disktest-verification-udeb/fgdiag-disktest-verification-udeb_1.7_all.udeb -O /tmp/fgdiag-disktest-verification-udeb.udeb && udpkg -i /tmp/fgdiag-disktest-verification-udeb.udeb
